<h2>おすすめ施設一覧</h2>

<div class="row">
  <div class="col-xs-3 col-xs-push-9">
    <table class="table">
      <thead>
        <tr>
          <th>順位</th>
          <th>名前</th>
          <th>閲覧数</th>
        </tr>
      </thead>

      <tbody>
        <% @most_viewed.each.with_index(1) do |rank, i| %>
          <tr>
            <td><%= "#{i}" %></td>
            <td><%= rank.name %></td>
            <td><%= rank.impressions_count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<div class="row">
  <% @facilities.each do |f| %>
    <div class="col-md-4">
      <div class="box">
      	<%= link_to users_facility_path(f) do %>
      	  <%= attachment_image_tag f, :image, :fill, 300, 300, fallback: "no_image.jpg",size:"100×100" %>
      	<% end %>
      <div><%= f.name %></div>
      <div><%= link_to "詳細",users_facility_path(f), class: "btn btn-outline-success" %></div>
      </div>
    </div>
  <% end %>
</div>